<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- is.affaire -->
    <record id="is_affaire_seq" model="ir.sequence">
        <field name="name">Code Affaire</field>
        <field name="code">is.affaire</field>
        <field name="prefix"></field>
        <field name="padding">5</field>
        <field eval="False" name="company_id"/>
    </record>
    <record id="is_affaire_form" model="ir.ui.view">
        <field name="name">is.affaire.form</field>
        <field name="model">is.affaire</field>
        <field name="arch" type="xml">
            <form style="background-color:red" class="form_is_affaire">
                <style>
                    .o_form_view .o_form_sheet_bg > .o_form_sheet{
                        max-width: 1800px;
                    }
                </style>
                <header>
                    <button
                        name="vers_affaire_gagnee"
                        type="object"
                        string="vers Affaire gagnée"
                        class="oe_highlight"
                        invisible="state != 'offre_en_cours'" 
                    />
                  <button
                        name="vers_offre_en_cours"
                        type="object"
                        string="vers Offre en cours"
                        invisible="state not in ['offre_perdue','affaire_gagnee']"
                    />
                    <button
                        name="vers_offre_perdue"
                        type="object"
                        string="vers Offre perdue"
                        invisible="state != 'offre_en_cours'"
                    />
                    <button 
                        name="vers_affaire_soldee" 
                        type="object"
                        string="vers Affaire soldée"
                        invisible="state != 'affaire_gagnee'"
                    />
                    <button 
                        name="de_affaire_soldee_vers_gagnee" 
                        type="object"
                        string="vers Affaire gagnée"
                        invisible="state != 'affaire_soldee'"
                    />
                    <button 
                        name="creation_activite" 
                        type="object"
                        string="Nouvelle activité"
                        invisible="(state != 'affaire_gagnee') or (user_is_intervenant != True)"
                    />
                    <button 
                        name="creation_frais" 
                        type="object"
                        string="Nouvelle fiche de frais"
                        invisible="(state != 'affaire_gagnee') or (user_is_intervenant != True)"
                    />
                    <button 
                        name="creation_facture" 
                        type="object"
                        string="Nouvelle facture"
                        invisible="state != 'affaire_gagnee'"
                    />
                    <field 
                        name="state" 
                        widget="statusbar"
                        statusbar_visible="offre_en_cours,affaire_gagnee,affaire_soldee" 
                    />
                    <!-- Bouton maintenance: réparer les pièces jointes (admin seulement) -->
                    <button
                        name="action_reparer_attachments"
                        type="object"
                        string="Réparer PJ"
                        class="btn-link"
                        groups="base.group_system"
                        help="Force res_model/res_id sur les pièces jointes liées (propositions/conventions)."
                    />
                </header>
                <sheet class="width1800px">
                    <field name="user_is_intervenant" invisible="1"/>
                    <div style="background:orange;font-size:11pt;font-weight: bold;padding-left:5px" invisible='alerte==False'>
                        <field name="alerte" nolabel="1"/>
                    </div>
                    <notebook>
                        <page string="Synthèse">
                            <group>
                                <field name="code_long"/>
                                <field name="nature_affaire"/>
                            </group>
                            <group>
                                <group>
                                    <field name="partner_id"/>
                                    <field name="type_intervention_id"/>
                                    <field name="secteur_id"/>
                                    <field name="type_offre_id"/>
                                    <field name="fiscal_position_id"/>

                                </group>
                                <group>
                                    <field name="date_creation"/>
                                    <field name="createur_id"/>
                                    <field name="ca_previsionnel"/>
                                    <field name="total_facture_ht"/>
                                    <field name="ecart_previsionnel_facture"/>
                                    <field name="jours_prevus"/>
                                    <field name="jours_realises"/>
                                    <field name="jours_consommes"/>
                                </group>
                            </group>
                            <group>
                                <field name="proposition_ids" widget="many2many_binary" context="{'default_res_model': 'is.affaire', 'default_res_id': id}"/>
                            </group>
                            <group invisible="state not in ['offre_en_cours','offre_perdue']">
                                <field name="relance_date"/>
                                <field name="relance_commentaire"/>
                                <field name="cause_id"/>
                                <field name="commentaire"/>
                            </group>
                            <group>
                                <field name="date_signature"/>
                            </group>
                            <group>
                                <field name="vendue_par_ids" nolabel="1">
                                    <list editable="bottom">
                                        <field name="user_id"/>
                                        <field name="repartition"/>
                                        <field name="commentaire"/>
                                    </list>
                                </field>
                            </group>
                            <group  invisible="state not in ['affaire_gagnee']">
                                <field name="activer_phases"/>
                            </group>
                        </page>
                        <page string="Affaire" invisible="state not in ['affaire_gagnee','affaire_soldee']">
                            <group string="Affaire">
                                <group>
                                    <field name="responsable_id"/>
                                </group>
                                <group>
                                    <field name="correspondant_id"/>
                                </group>
                            </group>
                            <group>
                                <field name="taux_ids" nolabel="1">
                                    <list editable="bottom">
                                        <field name="montant"/>
                                        <field name="unite"/>
                                        <field name="commentaire"/>
                                    </list>
                                </field>
                            </group>


                            <group string="Gestion des frais">
                                <field name="nature_frais"/>
                            </group>
                            <group>
                                <field name="forfait_jours_ids" nolabel="1">
                                    <list editable="bottom">
                                        <field name="montant"/>
                                        <field name="nb_jours"/>
                                        <field name="commentaire"/>
                                    </list>
                                </field>
                            </group>
                            <group string="Intervenants">
                                <field name="intervenant_ids" nolabel="1">
                                    <list editable="bottom">
                                        <field name="intervenant_id"/>
                                        <field name="type_intervenant"/>
                                        <field name="commentaire"/>
                                    </list>
                                </field>
                            </group>
                            <group>
                                <field name="consultant_ids" widget="many2many_tags"/>
                            </group>
                            <group string="Documents">
                                <field name="convention_ids" widget="many2many_binary" context="{'default_res_model': 'is.affaire', 'default_res_id': id}"/>
                            </group>
                        </page>
                        <page string="Phases" invisible="activer_phases != True">
                            <group>
                                <field name="phase_ids" nolabel="1">
                                    <list editable="bottom">
                                        <field name="name"/>
                                        <field name="jours_prevus"    sum="Total"/>
                                        <field name="total_vendu"     sum="Total"/>
                                        <field name="jours_consommes" sum="Total"/>
                                        <field name="nb_realise"      sum="Total"/>
                                        <field name="montant_realise" sum="Total"/>
                                        <field name="montant_restant" sum="Total"/>
                                        <field name="avancement" widget="progressbar"/>
                                    </list>
                                </field>
                            </group>
                            <group>
                                <button string="Recopier les phases dans les sous-phases" name="recopier_phases" type="object"/>
                            </group>
                            <group>
                                <field name="activite_phase_ids" nolabel="1" >
                                    <list editable="bottom">
                                        <button title="Activités de cette phase" name="acceder_activites_action" type="object" icon="fa-list" width="32"/>
                                        <button title="Nouvelle activité"        name="creation_activite_action" type="object" icon="fa-plus" width="32"/>
                                        <field name="affaire_phase_id" domain="[('affaire_id','=',parent.id)]"/>
                                        <field name="name"/>
                                        <field name="jours_prevus"    sum="Total"/>
                                        <field name="montant_vendu"/>
                                        <field name="total_vendu"     sum="Total"/>
                                        <field name="jours_consommes" sum="Total"/>
                                        <field name="nb_realise"      sum="Total"/>
                                        <field name="montant_realise" sum="Total"/>
                                        <field name="montant_restant" sum="Total"/>
                                        <field name="avancement" widget="progressbar"/>
                                    </list>
                                </field>
                            </group>
                        </page>
                        <page string="Activités" invisible="state not in ['affaire_gagnee','affaire_soldee']">
                            <group>
                                <field 
                                    name="activite_ids"
                                    nolabel="1" readonly="1"
                                    class="affaire-activites"
                                    limit="200"
                                >
                                    <list default_order="date_debut desc">
                                        <button title="Activité" name="acceder_activite_action" type="object" icon="fa-search-plus" width="32"/>
                                        <field name="partner_id" optional="show"/>
                                        <field name="phase_activite_id" optional="show"/> 
                                        <field name="nature_activite" optional="show"/>
                                        <field name="date_debut" optional="show"/>
                                        <field name="dates_intervention" optional="show"/>
                                        <field name="intervenant_id" optional="show"/>
                                        <field name="montant"  optional="show"/>
                                        <field name="nb_realise" optional="show"       sum="Total"/>
                                        <field name="nb_facturable" optional="show"    sum="Total"/>
                                        <field name="total_facturable" optional="show" sum="Total"/>
                                        <field name="state" optional="show" readonly="1"/>
                                        <field name="facture_sur_accompte" optional="show"/>
                                        <field name="invoice_id" optional="show"/>
                                    </list>
                                </field>
                            </group>
                            <group>
                                <field name="montant_realise" sum="Total"/>
                                <field name="montant_restant" sum="Total"/>
                            </group>
                        </page>
                        <page string="Frais" invisible="state not in ['affaire_gagnee','affaire_soldee']">
                            <group>
                                <field name="frais_ids" nolabel="1" readonly="1">
                                    <list>
                                        <button title="Frais" name="acceder_frais_action" type="object" icon="fa-search-plus" width="32"/>
                                        <field name="chrono_long" optional="show"/>
                                        <field name="date_creation" optional="show"/>
                                        <field name="createur_id" optional="show"/>
                                        <field name="activite_id" optional="show"/>
                                        <field name="affaire_id" optional="hide"/>
                                        <field name="type_activite" optional="show"/>
                                        <field name="frais_forfait" optional="hide"/>
                                        <field name="nb_jours" optional="hide"/>
                                        <field name="montant_forfait" optional="hide"/>
                                        <field name="parcours" optional="show"/>
                                        <field name="dates" optional="show"/>
                                        <field name="total_consultant"      optional="show" sum="Total"/>
                                        <field name="total_refacturable"    optional="show" sum="Total"/>
                                        <field name="total_frais"           optional="show" sum="Total"/>
                                        <field name="total_tva_recuperable" optional="show" sum="Total"/>
                                    </list>
                                </field>
                            </group>
                        </page>
                        <page string="Suivi du temps"  invisible="state not in ['affaire_gagnee','affaire_soldee']">
                            <group>
                                <field name="suivi_temps_ids" nolabel="1" readonly="1">
                                    <list>
                                        <button title="Suivi du temps" name="acceder_suivi_temps_action" type="object" icon="fa-search-plus" width="32"/>
                                        <field name="activite_id"/>
                                        <field name="type_activite" optional="show" />
                                        <field name="date_activite" optional="show" />
                                        <field name="nb_stagiaires" optional="show"                             sum="Total"/>
                                        <field name="nb_heures"     optional="show"         widget="float_time" sum="Total"/>
                                        <field name="realise_st"           optional="show" />
                                        <field name="a_distance"           optional="show" />
                                        <field name="aller_heure_depart"   optional="show"   widget="float_time"/>
                                        <field name="aller_heure_arrivee"  optional="show"   widget="float_time"/>
                                        <field name="retour_heure_depart"  optional="show"  widget="float_time"/>
                                        <field name="retour_heure_arrivee" optional="show"  widget="float_time"/>
                                        <field name="temps_deplacement"    optional="show"  widget="float_time" sum="Total"/>
                                        <field name="detail_activite"      optional="show" />
                                    </list>
                                </field>
                            </group>
                        </page>
                        <page string="Factures" invisible="state not in ['affaire_gagnee','affaire_soldee']">
                            <group>
                                <field name="facture_ids" nolabel="1" readonly="1">
                                    <list>
                                        <button title="Facture" name="acceder_facture_action" type="object" icon="fa-search-plus" width="32"/>
                                        <field name="invoice_date"/>
                                        <field name="name"/>
                                        <field name="is_createur_id"/>
                                        <field name="invoice_date_due"/>
                                        <field name="currency_id"         column_invisible="1"/>
                                        <field name="company_currency_id" column_invisible="1"/>
                                        <field name="amount_untaxed_signed"  string="Total HT"   sum="Total"/>
                                        <field name="amount_tax_signed"      string="TVA"        sum="Total"/>
                                        <field name="amount_total_signed"    string="Total TTC"  sum="Total"/>
                                        <field name="amount_residual_signed" string="Restant du" sum="Total"/>
                                        <field name="state"/>
                                    </list>
                                </field>
                            </group>
                            <group>
                                <field name="total_facture_ht"/>
                                <field name="total_facture_ttc"/>
                                <field name="total_encaissement"/>
                                <field name="reste_encaissement"/>
                            </group>
                        </page>
                        <page string="Factures ST" invisible="state not in ['affaire_gagnee','affaire_soldee']">
                            <group>
                                <field name="facture_st_ids" nolabel="1" readonly="1">
                                    <list>
                                        <button string="Facture ST" name="acceder_facture_st_action" type="object" icon="fa-search-plus" width="32"/>
                                        <field name="name"/>
                                        <field name="sous_traitant_id"/>
                                        <field name="date_facture"/>
                                        <field name="description"/>
                                        <field name="montant_ht" sum="Total"/>
                                        <field name="frais"      sum="Total"/>
                                    </list>
                                </field>
                            </group>
                        </page>

                    </notebook>
                    <group>
                        <field name="date_solde" readonly="True"/>
                        <field name="active" groups="base.group_system"/>
                    </group>
                </sheet>
                <chatter open_attachments="True"/>
            </form>
        </field>
    </record>



    <record id="is_affaire_kanban" model="ir.ui.view">
        <field name="name">is.centrale.kanban</field>
        <field name="model">is.affaire</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <strong>
                                    <field name="nature_affaire"/>
                                </strong>
                            </div>
                            <div>
                                <field name="code_long"/>
                            </div>
                            <div>
                                <field name="partner_id"/>
                            </div>
                            <div>
                                <field name="type_offre_id"/>
                            </div>
                            <div>
                                <field name="secteur_id"/>
                            </div>
                            <div>
                                <field name="date_creation"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    
    <record id="is_affaire_tree" model="ir.ui.view">
        <field name="name">is.affaire.tree</field>
        <field name="model">is.affaire</field>
        <field name="arch" type="xml">
            <list>
                <field name="code_long" optional="show"/>
                <field name="nature_affaire"   optional="show" class="min30rem"/>
                <field name="partner_id"       optional="show" widget="many2one_clickable"/>
                <field name="type_offre_id"    optional="show"/>
                <field name="secteur_id"       optional="show"/>
                <field name="date_creation"    optional="show"/>

                <field name="relance_date"        optional="hide"/>
                <field name="relance_commentaire" optional="hide"/>

                <field name="createur_id"      optional="show" widget="many2one_avatar_user" />
                <field name="responsable_id"   optional="show" widget="many2one_avatar_user" />
                <field name="ca_previsionnel"            optional="show" sum="Total"/>
                <field name="total_facture_ht"           optional="show" sum="Total"/>
                <field name="ecart_previsionnel_facture" optional="show" sum="Total"/>
                <field 
                    name="state" widget="badge" 
                    decoration-warning="state=='offre_en_cours'" 
                    decoration-success="state=='affaire_gagnee'" 
                    optional="show"
                    string="Etat"
                />
            </list>
        </field>
    </record>
    <record id="is_affaire_pivot" model="ir.ui.view">
        <field name="name">is_affaire_pivot</field>
        <field name="model">is.affaire</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="date_creation"   type="row" interval="year"/>
                <field name="secteur_id"      type="col"/>
                <field name="ca_previsionnel" type="measure"/>
            </pivot>
        </field>
    </record>
    <record id="is_affaire_graph" model="ir.ui.view">
        <field name="name">is_affaire_graph</field>
        <field name="model">is.affaire</field>
        <field name="arch" type="xml">
            <graph type="bar" stacked="True">
                <field name="annee_creation" type="row"/>
                <field name="ca_previsionnel" type="measure"/>
            </graph>
        </field>
    </record>
    <record id="is_affaire_search" model="ir.ui.view">
        <field name="name">is.affaire.search</field>
        <field name="model">is.affaire</field>
        <field name="arch" type="xml">
            <search>
                <field name="code_long"/>
                <field name="nature_affaire"/>
                <field name="partner_id"/>
                <field name="type_intervention_id"/>
                <field name="secteur_id"/>
                <field name="annee_creation"/>
                <field name="state"/>
                <field name="createur_id"/>
                <group expand="1" string="Group By">
                    <filter string="État"        name="group_state"          context="{'group_by':'state'}"/>
                    <filter string="Responsable" name="group_responsable_id" context="{'group_by':'responsable_id'}"/>
                    <filter string="Secteur"     name="group_secteur_id"     context="{'group_by':'secteur_id'}"/>
                </group>
           </search>
        </field>
    </record>
    <record  id="is_affaire_action" model="ir.actions.act_window">
        <field name="name">Affaires</field>
        <field name="res_model">is.affaire</field>
        <field name="limit">200</field>
        <field name="view_mode">list,form,kanban,pivot,graph</field>
    </record>

